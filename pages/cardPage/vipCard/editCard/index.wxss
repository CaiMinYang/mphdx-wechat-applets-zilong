page {
  height: 100%;
  background-color: #F1F1F1;
}
.fields-val-tarea{
  width: 100%;
  height: 160rpx;
  border-radius: 4rpx;
  border: 1px solid #EEEEEE;
  padding: 20rpx;
  box-sizing:border-box;
  margin-bottom: 40rpx;
}
.custom-card-edit {
  padding-bottom: 70px;
}

.fileds-list {
  padding: 10px 10px 1px 10px;
  margin-bottom: 10px;
  box-sizing: border-box;
  background-color: #fff;
}

.fields-title {
  height: 20px;
  line-height: 20px;
  margin-bottom: 10px;
  font-size: 14px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
}

.fields-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  padding: 0 10px;
  margin-bottom: 10px;
  border-radius: 2px;
  border: 1px solid #EEEEEE;
  font-size: 26rpx;
}
.fields-item1{
  justify-content: flex-end;
}
.labels{
  margin-right: auto;
}
.view-disabled {
  background: #EEEEEE;
}

.left {
  flex: 1;
  padding-right: 10px;
  height: 100%;
}

.inner-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10px;
  flex: 1;
  height: 100%;
  border: 1px solid #EEEEEE;
}

.fields-name {
  width: 100px;
  height: 20px;
  line-height: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}

.fields-val-img {
  display: block;
  width: 32px;
  height: 32px;
}

.no-img {
  width: 32px;
  height: 32px;
  background: #D8D8D8;
}

.fields-val-input {
  width: 180px;
  text-align: right;
}

.custom {
  border: none;
  padding: 0;
}

.add-custom {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 3px 0 13px;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  cursor: pointer;
}

.add-img {
  width: 14px;
  height: 14px;
  margin-right: 5px;
}

.delete-view {
  display: flex;
  align-items: center;
  padding: 0 10px;
  height: 100%;
}

.delete {
  width: 14px;
  height: 14px;
}

.delete-btn {
  height: 44px;
  line-height: 44px;
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FF2D2D;
  text-align: center;
  background: #FFFFFF;
}

.save-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 60px;
  padding: 10px 20px;
  background: #FFFFFF;
  box-sizing: border-box;
  z-index: 4;
}

.save-btn {
  display: block;
  flex: 1;
  width: 100%;
  height: 40px;
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  background: #1195DD;
  border-radius: 22px;
}

.add-modal {
  display: block;
}

.moda-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000000;
  opacity: 0.6;
}

.content {
  padding: 0 25px;
  position: fixed;
  top: 100px;
  width: 100%;
  z-index: 2;
  box-sizing: border-box;
}

.body {
  width: 100%;
  border-radius: 2px;
  border: 1px solid #979797;
  background-color: #fff;
}

.modal-hd {
  padding-top: 10px;
  margin-bottom: 20px;
  line-height: 22px;
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;

  text-align: center;
}

.modal-field {
  padding-left: 20px;
  margin-bottom: 10px;
  height: 20px;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 20px;
}

.group {
  padding-left: 20px;
  margin-bottom: 13px;
}

.label {
  margin-right: 26px;
}

.radio {
  margin-right: 7px;
}

.modal-input {
  padding: 0 10px;
  margin-bottom: 20px;
  box-sizing: border-box;
}

.inputs {
  height: 40px;
  padding: 10px;
  line-height: 20px;
  font-size: 14px;
  border-radius: 2px;
  box-sizing: border-box;
  border: 1px solid #EEEEEE;
}
.action{
  display: flex;
  align-items: center;
}
.cancel,.confirm{
  flex: 1;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  text-align: center;
  border-top: 1px solid #eeeeee;
}
.cancel{
  color: #999999;
  border-right: 1px solid #eeeeee;
}
.share-word{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.img-arrow{
  width: 16px;
  height: 16px;
  margin-left: 8px;
}
