@import "../../myCard.wxss";
page{
  padding-bottom: 0;
}
.card-tab-page {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  vertical-align: -10rpx;
  padding-right: 10rpx;
}
.searchwrapper{
  position: relative;
  width: 307px;
}
.seek{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 10px;
  top: 7px;
}
.searchinput {
  height: 32px;
  border-radius: 16px;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A4A9B5;
  border: 1px solid #666973;
}
.selectAll{
  margin-left: 30rpx;
  font-size: 16px;
  font-family: SourceHanSansSC-Regular, SourceHanSansSC;
  font-weight: 400;
  color: #0098EC;
}
.scroll-box {
  display: block;
  padding: 88rpx 0 10rpx 0;
}

.swap-unread {
  position: absolute;
  top: 24rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  vertical-align: 12rpx;
  color: red;
  font-size: 30rpx;
  font-weight: 700;
  text-align: center;
}

.sort-filter {
  position: absolute;
  top: 84rpx;
  left: 0;
  background: #fff;
  /* z-index:9999999; */
  width: 750rpx;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}

.sort-filter .filter-item {
  margin: 0 30rpx;
  border-bottom: 1px solid #e5e5e5;
}

.sort-filter .filter-item image {
  width: 44rpx;
  height: 44rpx;
  padding-right: 20rpx;
  vertical-align: -10rpx;
}

.sort-filter .filter-item .icon-sure {
  width: 26rpx;
  height: 26rpx;
  float: right;
  margin: 28rpx 20rpx 0 0;
}

.alphanet-selector {
  position: fixed;
  top: 10%;
  right: 0;
  height: 90%;
  line-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background: #fff;
}

.avatar {
  height: 108rpx;
  margin-right: 30rpx;
}

.mark-program {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 40rpx;
  font-size: 28rpx;
  color: #333;
  text-align: left;
  border-bottom: 1px solid #e5e5e5;
  background: #fff;
}

.mark-program image {
  width: 46rpx;
  height: 46rpx;
  margin-right: 40rpx;
  vertical-align: -6px;
}

.mark-program text {
  display: inline-block;
  width: 520rpx;
}

.mark-program .arrow {
  width: 32rpx;
  height: 32rpx;
  vertical-align: -2px;
}

.mark-program:last-child {
  margin-bottom: 20rpx;
  border-bottom: none;
}

.swap-num {
  position: relative;
  font-size: 32rpx;
  color: #F44B85;
}

.wait-receive {
  display: flex;
  padding: 0 40rpx 0 64rpx;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #ffdcb9;
  border-bottom: 1px solid #ffdcb9;
  box-sizing: border-box;
  background: #fff4e9;
}

.look-more {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #1b85d5;
  text-align: center;
  background: #fff
}