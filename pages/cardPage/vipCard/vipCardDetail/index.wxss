.myperson-card {
  background: #fff;
}

.vipBanner {
  background-color: #FFFFFF;
  position: relative;
}

.swiper-items {
  padding: 12px 10px 0 10px;
  box-sizing: border-box;
}

.swiper-items-inner {
  position: relative;
  height: 203px;
  box-sizing: border-box;
  overflow-y: hidden;
  box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.4);
}

.jiaoContainer {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 100;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
}

.jiao {
  width: 48rpx;
  height: 32rpx;
}

.cardImg {
  display: block;
  width: 100%;
  /* height: 415rpx; */
  box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.4);
}
.pj-varte-btn-wrap {
  padding: 0 30px;
  margin-bottom: 20px;
}
.to-give-carte {
  width: 100%;
  height: 36px;
  padding: 0;
  line-height: 36px;
  background: #1195DD;
  font-weight: 400;
  color: #FFFFFF;
  font-size: 16px;
  box-shadow: 0px 2px 12px 0px rgba(0, 0, 0, 0.2);
  border-radius: 18px;
  cursor: pointer;
}

.pj-action {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  padding: 0 20px;
  margin-bottom: 20px;
  cursor: pointer;
}
.pj-action:last-child{
  margin-bottom: 0;
}
.pj-action-item {
  display: flex;
  flex-direction: column;
  width: 32%;
  /* height: 114px; */
  background: #FFFFFF;
  box-shadow: 0px 2px 12px 0px rgba(0, 0, 0, 0.1);
  border-radius: 4px;
  align-items: center;
  padding: 14px 0 16px;
  margin: 0;
}

.pj-action-img {
  width: 40px;
  height: 40px;
  margin-bottom: 4px;
}

.pj-title {
  height: 17px;
  font-size: 12px;
  font-weight: 400;
  color: #333333;
  line-height: 17px;
  margin-bottom: 5px;
}

.pj-desc {
  height: 16px;
  font-size: 11px;
  font-weight: 400;
  color: #999999;
  line-height: 16px;
}
.has-carte-get {
  display: flex;
  flex: none;
  align-items: center;
  width: 100%;
  height: 40px;
  margin-bottom: 10px;
  padding-left: 15px;
  background: #FEF7E6;
  box-sizing: border-box;
}

.notice {
  width: 14px;
  height: 13px;
  margin-right: 5px;
}

.has-carte-get .text {
  height: 20px;
  font-size: 14px;
  font-weight: 400;
  color: #4B2B16;
}

.typedetail {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .2);
  /* box-shadow: 0 -10rpx 10rpx rgba(0,0,0,.1),0 -10rpx 20rpx rgba(0,0,0,.1); */
}
.pb4{
  padding-bottom: 4px;
}
.pj-buhied{
  position: fixed;
    left: 0;
    bottom: 102rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 58px;
    padding: 0 40rpx;
    background-color: #F8EFD9;
    box-sizing: border-box;
}
.pj-buhied-th{
  width: 18px;
  height: 18px;
  float: left;
  margin-top: 4rpx;
  margin-right: 12rpx;
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 19px;
  text-align: center;
  color: #F8EFD9;
  background: #333;
  border-radius: 50%;
}
.pj-buhied-btn{
  width: 80px;
  height: 28px;
  padding: 0;
  margin: 0;
  line-height: 28px;
  font-size: 14px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FBEFD4;
  background: #292929;
  border-radius: 14px;
}
