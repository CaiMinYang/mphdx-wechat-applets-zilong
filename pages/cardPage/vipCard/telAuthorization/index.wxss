page {
  background-color: #f1f1f1;
}

.phoneContainer {
  width: 690rpx;
  height: 268rpx;
  background-color: #FFFFFF;
  padding: 0 30rpx;
}

.placeholder-class {
  color: #999999;
}

.phone {
  width: 100%;
  height: 134rpx;
  display: flex;
  align-items: center;
}

.phone .name {
  display: flex;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  margin-right: 100rpx;
}

.phone .phoneInput {
  display: flex;
  flex: 1;
}

.phone .code {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 56rpx;
  background-color: #1B85D5;
  border-radius: 4rpx;
  margin-left: 10rpx;
  color: #FFFFFF;
  font-size: 28rpx;
}

.comfirm {
  width: 630rpx;
  height: 72rpx;
  border-radius: 20px;
  line-height: 72rpx;
  font-size: 30rpx;

  margin: 120rpx auto 0;
  background-color: #1B85D5;
  color: #FFFFFF;
  text-align: center;
}