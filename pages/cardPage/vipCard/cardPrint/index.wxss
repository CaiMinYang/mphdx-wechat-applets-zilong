.nav-tab {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 160rpx;
  background: #FFFFFF;
}

.tab-item {
  width: 216rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #F1F1F1;
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
