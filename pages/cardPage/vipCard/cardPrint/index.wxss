  text-align: center;
  color: #333333;
  transition: all 0.1s ease;
}

.left-radiu {
  border-bottom-left-radius: 40rpx;
  border-top-left-radius: 40rpx;
}

.right-radiu {
  border-bottom-right-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.tab-item.selected {
  background: #0098EC;
  color: #fff;
}

.page-content {
  padding-bottom: 180rpx;
}

.qrcode-img {
