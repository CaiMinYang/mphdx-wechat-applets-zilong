  font-weight: 600;
  color: #333333;
  line-height: 20px;
  text-align: center;
}

.swiper {
  position: relative;
  width: 590rpx;
  height: 850rpx;
  margin: auto;
}

.print-imgs {
  display: flex;
  justify-content: center;
